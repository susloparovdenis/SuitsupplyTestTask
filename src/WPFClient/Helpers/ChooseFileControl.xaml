<UserControl x:Class="SuitsupplyTestTask.WPFClient.Helpers.ChooseFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="uc"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Button Margin="3" Padding="1" DockPanel.Dock="Right" Click="ButtonBase_OnClick">Browse...</Button>
        <TextBox MinWidth="200" Margin="3" Name="TextBox" Text="{Binding Path, ElementName=uc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </DockPanel>
</UserControl>
    
